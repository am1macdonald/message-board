<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <h2>Messages</h2>
    <a href="/new">Add message</a>
    <div>
      <ul>
        <% messages.forEach(message => { %>

        <li>
          <p><%= message.text %></p>
          <span><%= message.user %></span>
          <span><%= message.added %></span>
        </li>

        <% }) %>
      </ul>
    </div>
  </body>
</html>
